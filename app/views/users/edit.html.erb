<%= form_for(@user) do |f| %>
 <div class ="container">
  <h2>会員情報</h2>
  <div class="field">
   <label for="user_name">名前</label>
   <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
  <label for="user_image">プロフィール画像</label>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
  </div>
  <div class="field">
   <label for="user_introduction">自己紹介</label>
    <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>
  <div class="actions">
   <%= f.submit '更新' %>
   </div>
 </div>
<% end %>
