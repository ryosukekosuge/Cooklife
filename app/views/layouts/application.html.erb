<!DOCTYPE html>
<html>
  <head>
    <title>Cooklife</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-expand-lg navbar-dark" style="background-color: #c22a1f">
   <div class="container">
    <nav class= "nav navbar-nav navbar-left">
      <a class="navbar-brand" href="/">Cooklife</a>
    </nav>
     <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li><%= link_to " ホーム", root_path, class: "glyphicon glyphicon-home home" %></li>
       <li><%= link_to " レシピ" , recipes_path,  class: "glyphicon glyphicon-user users" %></li>
       <li><%= link_to " logout" ,destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out sign_out" %></li>
       <% else %>
       <li><%= link_to " ホーム", root_path, class: "glyphicon glyphicon-home home" %></li>
       <li><%= link_to " レシピ" , recipes_path,  class: "glyphicon glyphicon-user users" %></li>
      <li><%= link_to "新規登録" , new_user_registration_path , class: "glyphicon glyphicon-edit sign_up" %></li>
       <li><%= link_to "ログイン" ,new_user_session_path , class: "glyphicon glyphicon-log-in sign_in" %></li>
      <% end %>
     </ul>
    </nav>
</header>
    <%= yield %>
  </body>
</html>

